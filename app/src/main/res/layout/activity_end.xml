<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="shared.bc.com.bodyrobot.HomeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="360">

        <ImageView
            android:id="@+id/image_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/image_back_end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/machie_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1105dp"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="95sp"
                android:textStyle="bold"
                android:gravity="center"
                tools:text="3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/equipment_debugging_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:maxLines="4"
                android:layout_marginTop="1800dp"
                android:layout_marginLeft="-420dp"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:text="身高:\n体重:\n生物阻抗:\n图片编码:"
                android:textStyle="bold"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/image_log"
            android:layout_width="445dp"
            android:layout_height="445dp"
            android:layout_marginTop="275dp"
            android:background="@color/ALICEBLUE"
            android:layout_gravity="center_horizontal"/>
    </FrameLayout>

</LinearLayout>
