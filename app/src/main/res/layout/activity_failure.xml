<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="shared.bc.com.bodyrobot.HomeActivity">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="360">

        <ImageView
            android:id="@+id/image_failure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/image_back_failure" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="500dp">

            <TextView
                android:id="@+id/machie_failure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="434dp"
                android:textColor="@android:color/white"
                android:textSize="95sp"
                android:textStyle="bold"
                tools:text="3" />
            android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
